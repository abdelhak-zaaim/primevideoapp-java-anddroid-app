<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBG"
    android:orientation="vertical">

    <!--Bottom-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Poster -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/poster"
            android:layout_marginTop="@dimen/margin1"
            android:orientation="vertical">

            <!-- Poster -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightBlack" />

        </LinearLayout>

        <!--Other Views-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Movie details-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mainMargin"
                android:layout_marginTop="@dimen/mainMarginTop"
                android:layout_marginEnd="@dimen/mainMargin"
                android:layout_marginBottom="@dimen/mainMarginBottom"
                android:orientation="vertical">

                <!--Title, Tag (prime / not prime), Tag Desc-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/titleMarginSmall"
                    android:layout_marginEnd="@dimen/titleMarginSmall"
                    android:orientation="vertical">

                    <!--Title-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:background="@drawable/round_bg_r5_white"
                        android:backgroundTint="@color/lightBlack" />

                    <!--Season-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="70dp"
                            android:layout_height="18dp"
                            android:background="@drawable/round_bg_r5_white"
                            android:backgroundTint="@color/lightBlack" />

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/ic_dropdown"
                            android:backgroundTint="@color/lightBlack" />

                    </LinearLayout>

                    <!--Tag (prime / not prime)-->
                    <View
                        android:layout_width="80dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="@dimen/margin8"
                        android:background="@drawable/round_bg_r5_white"
                        android:backgroundTint="@color/lightBlack" />

                    <!--Tag Desc-->
                    <View
                        android:layout_width="120dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="@dimen/margin3"
                        android:background="@drawable/round_bg_r5_white"
                        android:backgroundTint="@color/lightBlack" />

                </LinearLayout>

                <!-- Watch Now -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/lightBlack"
                    app:cardCornerRadius="3dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="45dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.16"
                                android:gravity="center">

                                <View
                                    android:layout_width="@dimen/featureIconSize"
                                    android:layout_height="@dimen/featureIconSize"
                                    android:background="@drawable/ic_play2"
                                    android:backgroundTint="@color/extraDarkGray"
                                    android:gravity="center" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.84"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <View
                                    android:layout_width="85dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/round_bg_r5_white"
                                    android:backgroundTint="@color/extraDarkGray" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Other Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/titleMarginSmall"
                    android:layout_marginEnd="@dimen/titleMarginSmall"
                    android:orientation="vertical">

                    <!-- Trailer, Download, Watchlist and More -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <!--Watchlist-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="@dimen/movieFeatureSize"
                                android:layout_height="@dimen/movieFeatureSize"
                                android:background="@drawable/circle_bor_bg"
                                android:backgroundTint="@color/lightBlack"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="@dimen/featureIconSize"
                                    android:layout_height="@dimen/featureIconSize"
                                    android:background="@drawable/ic_add_icon"
                                    android:backgroundTint="@color/lightBlack"
                                    android:gravity="center" />

                            </LinearLayout>

                            <View
                                android:layout_width="45dp"
                                android:layout_height="15dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/round_bg_r5_white"
                                android:backgroundTint="@color/lightBlack" />

                        </LinearLayout>

                        <!--Download-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="@dimen/movieFeatureSize"
                                android:layout_height="@dimen/movieFeatureSize"
                                android:background="@drawable/circle_bor_bg"
                                android:backgroundTint="@color/lightBlack"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="@dimen/featureIconSize"
                                    android:layout_height="@dimen/featureIconSize"
                                    android:background="@drawable/ic_downloads"
                                    android:backgroundTint="@color/lightBlack"
                                    android:gravity="center" />

                            </LinearLayout>

                            <View
                                android:layout_width="50dp"
                                android:layout_height="12dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/round_bg_r5_white"
                                android:backgroundTint="@color/lightBlack" />

                            <View
                                android:layout_width="42dp"
                                android:layout_height="12dp"
                                android:layout_marginTop="@dimen/margin2"
                                android:background="@drawable/round_bg_r5_white"
                                android:backgroundTint="@color/lightBlack" />

                        </LinearLayout>

                        <!-- Watch Party -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="@dimen/movieFeatureSize"
                                android:layout_height="@dimen/movieFeatureSize"
                                android:background="@drawable/circle_bor_bg"
                                android:backgroundTint="@color/lightBlack"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="@dimen/featureIconSize"
                                    android:layout_height="@dimen/featureIconSize"
                                    android:background="@drawable/ic_party"
                                    android:backgroundTint="@color/lightBlack"
                                    android:gravity="center" />

                            </LinearLayout>

                            <View
                                android:layout_width="45dp"
                                android:layout_height="15dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/round_bg_r5_white"
                                android:backgroundTint="@color/lightBlack" />

                        </LinearLayout>

                        <!--More-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="@dimen/movieFeatureSize"
                                android:layout_height="@dimen/movieFeatureSize"
                                android:background="@drawable/circle_bor_bg"
                                android:backgroundTint="@color/lightBlack"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="@dimen/featureIconSize"
                                    android:layout_height="@dimen/featureIconSize"
                                    android:background="@drawable/ic_more"
                                    android:backgroundTint="@color/lightBlack"
                                    android:gravity="center" />

                            </LinearLayout>

                            <View
                                android:layout_width="45dp"
                                android:layout_height="15dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/round_bg_r5_white"
                                android:backgroundTint="@color/lightBlack" />

                        </LinearLayout>

                    </LinearLayout>

                    <!--Movie Desc-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@drawable/round_bg_r5_white"
                        android:backgroundTint="@color/lightBlack" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginTop="@dimen/margin3"
                        android:background="@drawable/round_bg_r5_white"
                        android:backgroundTint="@color/lightBlack" />

                    <View
                        android:layout_width="150dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="@dimen/margin3"
                        android:background="@drawable/round_bg_r5_white"
                        android:backgroundTint="@color/lightBlack" />

                    <!--IMDb ratings-->
                    <View
                        android:layout_width="35dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/round_bg_r5_white"
                        android:backgroundTint="@color/lightBlack" />

                    <!--Year, Duration, Age limit, Quality and Comment-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_marginTop="@dimen/margin3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!--Year-->
                        <View
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:background="@drawable/round_bg_r5_white"
                            android:backgroundTint="@color/lightBlack" />

                        <!--Duration-->
                        <View
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/round_bg_r5_white"
                            android:backgroundTint="@color/lightBlack" />

                        <!--Age limit-->
                        <View
                            android:layout_width="30dp"
                            android:layout_height="15dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/round_bor_bg"
                            android:backgroundTint="@color/lightBlack" />

                        <!--Quality-->
                        <View
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/round_bor_bg"
                            android:backgroundTint="@color/lightBlack" />

                        <!--Comment-->
                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/ic_comment"
                            android:backgroundTint="@color/lightBlack" />

                    </LinearLayout>

                    <!--Language, Audio and Subtitle-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="70dp"
                            android:layout_height="18dp"
                            android:background="@drawable/round_bg_r5_white"
                            android:backgroundTint="@color/lightBlack" />

                        <View
                            android:layout_width="70dp"
                            android:layout_height="15dp"
                            android:layout_marginStart="@dimen/margin8"
                            android:background="@drawable/round_bg_r5_white"
                            android:backgroundTint="@color/lightBlack" />

                        <View
                            android:layout_width="70dp"
                            android:layout_height="15dp"
                            android:layout_marginStart="@dimen/margin3"
                            android:background="@drawable/round_bg_r5_white"
                            android:backgroundTint="@color/lightBlack" />

                        <View
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:layout_marginStart="5dp"
                            android:background="@drawable/ic_dropdown"
                            android:backgroundTint="@color/lightBlack" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/margin5">

                    <View
                        android:layout_width="120dp"
                        android:layout_height="18dp"
                        android:background="@drawable/round_bg_r5_white"
                        android:backgroundTint="@color/lightBlack" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/margin5"
                        android:background="@drawable/round_bg_r5_white"
                        android:backgroundTint="@color/lightBlack" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/margin5">

                    <View
                        android:layout_width="120dp"
                        android:layout_height="18dp"
                        android:background="@drawable/round_bg_r5_white"
                        android:backgroundTint="@color/lightBlack" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/margin5"
                        android:background="@drawable/round_bg_r5_white"
                        android:backgroundTint="@color/lightBlack" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/titleMarginStart"
                android:layout_marginTop="@dimen/contentMarginTop"
                android:orientation="vertical"
                android:visibility="visible">

                <!--Title-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/titleMarginSmall"
                    android:layout_marginEnd="@dimen/titleMarginEnd"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:background="@drawable/round_bg_r5_white"
                        android:backgroundTint="@color/lightBlack"
                        android:gravity="center_vertical" />

                    <View
                        android:layout_width="@dimen/moreIconSize"
                        android:layout_height="@dimen/moreIconSize"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/ic_arrow_right"
                        android:gravity="center"
                        android:visibility="gone" />

                </LinearLayout>

                <!--Data-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/width_continue_L"
                            android:layout_height="@dimen/height_continue_L"
                            app:cardBackgroundColor="@color/black"
                            app:cardCornerRadius="@dimen/cardRadius"
                            app:cardUseCompatPadding="true">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/lightBlack" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/width_continue_L"
                            android:layout_height="@dimen/height_continue_L"
                            app:cardBackgroundColor="@color/black"
                            app:cardCornerRadius="@dimen/cardRadius"
                            app:cardUseCompatPadding="true">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/lightBlack" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/width_continue_L"
                            android:layout_height="@dimen/height_continue_L"
                            app:cardBackgroundColor="@color/black"
                            app:cardCornerRadius="@dimen/cardRadius"
                            app:cardUseCompatPadding="true">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/lightBlack" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>