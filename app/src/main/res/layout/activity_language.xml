                                        android:textSize="@dimen/text_16" />

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="@dimen/margin10"
                                android:background="@color/otherColor" />

                        </LinearLayout>

                        <!-- Pashto -->
                        <LinearLayout
                            android:id="@+id/lyLangPashto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin10"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin8"
                                android:layout_marginEnd="@dimen/margin8"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/minHeightSettings"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.12"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtPashtoIcon"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:background="@drawable/round_bg_white"
                                        android:gravity="center" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.88"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtPashto"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/public_medium"
                                        android:gravity="center_vertical"
                                        android:text="پښتو"
                                        android:textColor="@color/text_white"
                                        android:textSize="@dimen/text_16" />

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="@dimen/margin10"
                                android:background="@color/otherColor" />

                        </LinearLayout>

                        <!-- Swahili -->
                        <LinearLayout
                            android:id="@+id/lyLangSwahili"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin10"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin8"
                                android:layout_marginEnd="@dimen/margin8"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/minHeightSettings"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.12"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtSwahiliIcon"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:background="@drawable/round_bg_white"
                                        android:gravity="center" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.88"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtSwahili"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/public_medium"
                                        android:gravity="center_vertical"
                                        android:text="Kiswahili"
                                        android:textColor="@color/text_white"
                                        android:textSize="@dimen/text_16" />

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="@dimen/margin10"
                                android:background="@color/otherColor" />

                        </LinearLayout>

                        <!-- Tamil -->
                        <LinearLayout
                            android:id="@+id/lyLangTamil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin10"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin8"
                                android:layout_marginEnd="@dimen/margin8"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/minHeightSettings"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.12"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtTamilIcon"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:background="@drawable/round_bg_white"
                                        android:gravity="center" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.88"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtTamil"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/public_medium"
                                        android:gravity="center_vertical"
                                        android:text="தமிழ்"
                                        android:textColor="@color/text_white"
                                        android:textSize="@dimen/text_16" />

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="@dimen/margin10"
                                android:background="@color/otherColor" />

                        </LinearLayout>

                        <!-- Telugu -->
                        <LinearLayout
                            android:id="@+id/lyLangTelugu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin10"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin8"
                                android:layout_marginEnd="@dimen/margin8"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/minHeightSettings"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.12"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtTeluguIcon"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:background="@drawable/round_bg_white"
                                        android:gravity="center" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.88"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtTelugu"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/public_medium"
                                        android:gravity="center_vertical"
                                        android:text="தெலுங்கு"
                                        android:textColor="@color/text_white"
                                        android:textSize="@dimen/text_16" />

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="@dimen/margin10"
                                android:background="@color/otherColor" />

                        </LinearLayout>

                        <!-- Zulu -->
                        <LinearLayout
                            android:id="@+id/lyLangZulu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin10"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin8"
                                android:layout_marginEnd="@dimen/margin8"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/minHeightSettings"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.12"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtZuluIcon"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:background="@drawable/round_bg_white"
                                        android:gravity="center" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.88"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtZulu"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/public_medium"
                                        android:gravity="center_vertical"
                                        android:text="Zulu"
                                        android:textColor="@color/text_white"
                                        android:textSize="@dimen/text_16" />

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="@dimen/margin10"
                                android:background="@color/otherColor" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>