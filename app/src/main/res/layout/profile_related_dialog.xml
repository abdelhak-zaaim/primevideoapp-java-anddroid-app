<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:background="@color/overlay60"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/windowBG"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin15"
                android:layout_marginBottom="@dimen/margin18"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin20"
                android:paddingEnd="@dimen/margin20">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAllProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="true"
                    app:fastScrollEnabled="false" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/otherColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin20"
                android:layout_marginTop="@dimen/margin18"
                android:layout_marginEnd="@dimen/margin20"
                android:layout_marginBottom="@dimen/margin18"
                android:orientation="vertical">

                <!-- Create Profile -->
                <LinearLayout
                    android:id="@+id/lyCreateProfile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.12"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:background="@drawable/ic_add_icon"
                            android:backgroundTint="@color/lightGray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.88"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/public_semibold"
                            android:gravity="center_vertical"
                            android:text="@string/create_profile"
                            android:textColor="@color/text_white"
                            android:textSize="@dimen/text_12" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Manage Profile -->
                <LinearLayout
                    android:id="@+id/lyManageProfile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.12"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:background="@drawable/ic_edit"
                            android:backgroundTint="@color/lightGray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.88"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/public_semibold"
                            android:gravity="center_vertical"
                            android:text="@string/manage_profile"
                            android:textColor="@color/text_white"
                            android:textSize="@dimen/text_12" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Learn more about profiles -->
                <LinearLayout
                    android:id="@+id/lyLearnMore"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.12"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:background="@drawable/ic_info"
                            android:backgroundTint="@color/lightGray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.88"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/public_semibold"
                            android:gravity="center_vertical"
                            android:text="@string/learn_more_about_profiles"
                            android:textColor="@color/text_white"
                            android:textSize="@dimen/text_12" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>